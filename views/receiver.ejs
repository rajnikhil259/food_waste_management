
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Receiver Dashboard</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
 
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background: #F9F9F9;
      margin: 0;
    }
    header {
      background: #fff;
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1rem 2rem;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    }
    .menu-icon {
      font-size: 1.5rem;
      cursor: pointer;
    }
    .nav-title {
      font-size: 1.25rem;
      font-weight: 600;
      color: #333;
    }
    .header-right {
      display: flex;
      gap: 1rem;
    }
    button {
      padding: 0.5rem 1rem;
      background-color: #007bff;
      color: white;
      font-weight: bold;
      border: none;
      border-radius: 10px;
      cursor: pointer;
    }
    .sidebar {
      position: fixed;
      right: -300px;
      top: 0;
      width: 300px;
      height: 100%;
      background: #fff;
      box-shadow: -2px 0 10px rgba(0,0,0,0.1);
      padding: 1rem;
      transition: right 0.3s ease;
      overflow-y: auto;
    }
    .sidebar.open {
      right: 0;
    }
    .post-grid {
      padding: 2rem;
      display: grid;
      gap: 1.5rem;
    }
    .card {
      background: #fff;
      border-radius: 12px;
      padding: 1rem 1.5rem;
      box-shadow: 0 2px 6px rgba(0,0,0,0.05);
    }
    .badge {
      background: orange;
      color: white;
      padding: 0.3rem 0.5rem;
      border-radius: 5px;
      font-size: 0.75rem;
    }
    form input, form textarea, form button {
      display: block;
      width: 100%;
      padding: 0.6rem;
      margin: 0.5rem 0;
      border-radius: 10px;
      font-size: 14px;
    }
    form input, form textarea {
      border: 1px solid #ccc;
    }
    #request-form {
      padding: 2rem;
      display: none;
    }
  </style>

</head>
<body class="body2">
  <header>
    <div class="menu-icon" onclick="toggleSidebar()">&#9776;</div>
    <div class="nav-title">Hello, <%= user.name %> (Receiver)</div>
    <div class="header-right">
      <button  class="btn4" onclick="window.location.href='/logout'">ðŸ”’</button>
      <button  class="btn4" onclick="showRequestForm()">+ Request Food</button>
    </div>
  </header>

  <div id="sidebar" class="sidebar">
    <h3>Fulfilled Requests</h3>
    <% if (fulfilledRequests.length === 0) { %>
      <p>No fulfilled requests yet.</p>
    <% } else { %>
      <% fulfilledRequests.forEach(req => { %>
        <div class="card">
          <h4><%= req.food_type %></h4>
          <p>Qty: <%= req.quantity %><br>Location: <%= req.location %></p>
          <p>Status: <span class="badge"><%= req.status %></span></p>
        </div>
      <% }); %>
    <% } %>
  </div>

  <section id="request-form">
    <form action="/request-food" method="POST">
      <input type="hidden" name="receiver_id" value="<%= user.id %>" />
      <input type="text" name="food_type" placeholder="Food Type" required />
      <input type="text" name="quantity" placeholder="Quantity" required />
      <input type="text" name="location" placeholder="Location and mobile" required />
      <textarea name="description" placeholder="Description (optional)"></textarea>
      <button  class="btn4" type="submit">Submit Request</button>
    </form>
  </section>

  <main class="post-grid">
    <% requests.forEach(req => { %>
      <article class="card">
        <h3><%= req.food_type %></h3>
        <p>Quantity: <%= req.quantity %></p>
        <p>Status: <span class="badge"><%= req.status %></span></p>
        <% if (req.status === 'pending' && req.donation_id) { %>
          <form action="/confirm-donation" method="POST">
            <input type="hidden" name="donation_id" value="<%= req.donation_id %>" />
            <input type="hidden" name="request_id" value="<%= req.id %>" />
            <button class="btn4" type="submit">Confirm Donation Received</button>
          </form>
        <% } else if (req.status === 'pending' && !req.donation_id) { %>
          <p><em>Waiting for donor to donate.</em></p>
        <% } %>
      </article>
    <% }); %>
  </main>
 
  <script>
    function toggleSidebar() {
      document.getElementById('sidebar').classList.toggle('open');
    }
    function showRequestForm() {
      document.getElementById('request-form').style.display = 'block';
      window.scrollTo(0, document.body.scrollHeight);
    }
  </script>

</body>
</html>
